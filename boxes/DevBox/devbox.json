{
    "builders": [{
        "type": "virtualbox-ovf",
        "source_path": "../FreeBSD-10.1-RELEASE/build/FreeBSD-10.1-RELEASE.ovf",
        "ssh_username": "root",
        "ssh_password": "vagrant",
        "shutdown_command": "poweroff; poweroff",
        "vboxmanage": [
            ["modifyvm", "{{.Name}}", "--cpus", "4"],
            ["modifyvm", "{{.Name}}", "--memory", "4096"],
            ["modifyvm", "{{.Name}}", "--vram", "256"],
            ["modifyvm", "{{.Name}}", "--hwvirtex", "on"],
            ["modifyvm", "{{.Name}}", "--ioapic", "on"]
        ]
    }],
    "provisioners": [{
        "type": "file",
        "source": "files",
        "destination": "/tmp"
    }, {
        "scripts": [
            "scripts/apply_files.sh",
            "scripts/users.sh",
            "scripts/packages.sh"
        ],
        "type": "shell",
        "execute_command": "chmod +x {{ .Path }}; env {{ .Vars }} {{ .Path }}"
    }],
    "post-processors": [{
        "type": "vagrant",
        "output": "build/devbox.box"
    }]
}
