#!/usr/bin/env bash
set -euo pipefail

SOURCE_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

echo "Provisioning nixos system configuration."

echo "Using nixos-18.03 as default channel"
nix-channel --add https://nixos.org/channels/nixos-18.03 nixos

echo "Using nixos-unstable as optional channel"
nix-channel --add https://nixos.org/channels/nixos-unstable nixos-unstable

echo "Updating OS configuration"
cp ${SOURCE_DIR}/../nixos/common.nix /etc/nixos/common.nix
cp ${SOURCE_DIR}/../nixos/laptop-t420.nix /etc/nixos/configuration.nix

nix-channel --update
nixos-rebuild switch

echo "Provisioning complete."
